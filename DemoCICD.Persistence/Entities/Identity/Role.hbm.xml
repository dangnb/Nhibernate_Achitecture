<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping  xmlns="urn:nhibernate-mapping-2.2">
  <class name="QLTS.Domain.Entities.Identity.Role, QLTS.Domain" dynamic-update="true" table="Role" lazy="true">
    <id name="RoleID" column="RoleID" type="Int32" unsaved-value="0">
      <generator class="identity"/>
    </id>
    <property name="ComID" column="ComID" type="int" />
    <property name="Code" column="Code" type="string" />
    <property name="Name" column="Name" type="string" />
    <property name="IsSysadmin" column="IsSysadmin" type="Boolean" />

    <bag name="Permissions" table="Role_Permission" lazy="true">
      <key column="RoleID" />
      <many-to-many class="QLTS.Domain.Entities.Identity.Permission, QLTS.Domain" column="PermissionID" />
    </bag>
  </class>
</hibernate-mapping>