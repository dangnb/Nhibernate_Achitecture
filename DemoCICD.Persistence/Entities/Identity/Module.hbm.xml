<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping  xmlns="urn:nhibernate-mapping-2.2">
  <class name="QLTS.Domain.Entities.Identity.Module, QLTS.Domain" dynamic-update="true" table="PermissionGroup" lazy="true">        
    <id name="Code" column="Code" type="string" />
    <property name="Name" column="Name" type="string" />
    <property name="IsActive" column="IsActive" type="Boolean" />
    
    <bag name="Permissions" table="Permission" cascade="none" inverse="true" lazy="true">
      <key column="GroupCode" />
      <one-to-many class="QLTS.Domain.Entities.Identity.Permission, QLTS.Domain" />
    </bag>
  </class>
</hibernate-mapping>