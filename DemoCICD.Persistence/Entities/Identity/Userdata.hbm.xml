<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping  xmlns="urn:nhibernate-mapping-2.2">
  <class name="QLTS.Domain.Entities.Identity.Userdata, QLTS.Domain" dynamic-update="true" table="Users" lazy="true">
    <id name="UserID" column="UserID" type="Int32" unsaved-value="0">
      <generator class="identity"/>
    </id>
    <property name="Username" column="Username" type="string" />
    <property name="FullName" column="FullName" type="string" />
    <property name="Email" column="Email" type="string" />
    <property name="Password" column="Password" type="string" />
    <property name="PasswordSalt" column="PasswordSalt" type="string" />
    <property name="HashAlgorithm" column="HashAlgorithm" type="string" />
    <property name="IsLocked" column="IsLocked" type="Boolean" />
    <property name="IsActive" column="IsActive" type="Boolean" />
    <property name="IsDeleted" column="IsDeleted" type="Boolean" />
    <property name="CreateDate" column="CreateDate" type="DateTime" />
    <property name="ModifiedDate" column="ModifiedDate" type="DateTime" />
    <property name="FailedPassAttemptCount" column="FailedPassAttemptCount" type="int" />
    <property name="GroupCode" column="GroupCode" type="string" />
    <property name="IsManager" column="IsManager" type="Boolean" />
    <property name="BranchCode" column="BranchCode" type="string" />

    <bag name="Roles" table="User_Role" lazy="true">
      <key column="UserID" />
      <many-to-many class="QLTS.Domain.Entities.Identity.Role, QLTS.Domain" column="RoleID" />
    </bag>    
  </class>
</hibernate-mapping>